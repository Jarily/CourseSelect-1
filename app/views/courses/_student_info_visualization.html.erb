<div class="panel panel-primary filterable table_border_blue">
  <div class="panel-heading table_new_blue">
    <h4 class="panel-title">
      <a data-toggle="collapse" data-parent="#accordion"
         href="#collapseStudentInfo">
        <%= @course.name %> 学生信息统计
      </a>
    </h4>
  </div>
  <div id="collapseStudentInfo" class="panel-collapse collapse in">
    <div class="panel-body">
      <div id="department_statistic" style="width:100%;height:400px;"></div>
    </div>
    <script type="text/javascript">
        var chart = echarts.init(document.getElementById('department_statistic'));

        option = {
            title: {
                text: '研究所信息统计',
                x: 'center'
            },
            tooltip: {
                trigger: 'item',
                formatter: "{a} <br/>{b} : {c} ({d}%)"
            },
            legend: {
                orient: 'vertical',
                left: 'left',
                data: [
                    <% @user_department.keys.each do |key|%>
                    '<%= key %>',
                    <% end%>
                ]

            },
            series: [
                {
                    type: 'pie',
                    radius: '55%',
                    center: ['50%', '60%'],
                    data: [
                        <% @user_department.each do |key,value|%>
                        {value:<%= value %>, name: '<%= key %>'},
                        <% end%>
                    ],
                    itemStyle: {
                        emphasis: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };

        chart.setOption(option);

    </script>
  </div>
</div>