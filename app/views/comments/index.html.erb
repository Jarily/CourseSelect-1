<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">

      <div class="panel panel-primary filterable table_border">
        <div class="panel-heading table_new">
          <h3 class="panel-title">课程评估</h3>
        </div>

        <div class="panel-body">
          <table class="table table-responsive table-condensed table-hover">
            <thead>
            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>课时/学分</th>
              <th>考试方式</th>
              <th>主讲教师</th>
			        <th>评估操作</th>
            </tr>

            <tbody>
            <% @comments.each do |comment| %>
                <tr>
                  <td><%= comment.course.course_code %></td>
                  <td><%= comment.course.name %></td>
                  <td><%= comment.course.credit %></td>
                  <td><%= comment.course.exam_type %></td>
                  <td><%= comment.course.teacher.name %></td>
                  <%if comment.commented?%>
                  <td><%= link_to "已评估", edit_comment_url(comment), class: 'btn btn-xs btn-info btn_new_cancel' %></td>
                  <%end%>
                  <%if !comment.commented?%>
                  <td><%= link_to "评估", edit_comment_url(comment), class: 'btn btn-xs btn-info btn_new' %></td>
                  <%end%>
                </tr>
            <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>